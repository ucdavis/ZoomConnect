@model ZoomConnect.Core.Config.CmdKeyOptions
@{
    ViewData["Title"] = "Command Key";
}

<h1>Command Key Setup</h1>

<form asp-controller="Setup" asp-action="CmdKey" method="post">

    <p>
        In order to run actions in /Cmd such as Cloud Download and Mediasite Upload,
        a Command Key is required.  Clicking Create will remove any old key and generate
        a new key, displaying it only one time.  Please copy this key to use in scheduled tasks.
    </p>

    @if (String.IsNullOrEmpty(Model.CmdKey))
    {
        <p>
            You have not yet set up a Command Key.  Click Create below to generate and display a new key.
        </p>
    }
    else
    {
        <p>
            You have a key generated by @Model.CreatedBy on @Model.CreatedDate.  If you click Create
            to generate a new key below, the current key will be replaced and no longer valid.
        </p>
    }

    <input type="hidden" name="confirm" value="true" />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-controller="Home"><span class="btn btn-secondary">Cancel</span></a>

</form>